extends ../frame
block content
   .navbar.navbar-fixed-top.navbar-inverse
      .container
         .navbar-header
            button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
               span.sr-only Toggle navigation
               span.icon-bar
               span.icon-bar
               span.icon-bar
            a.navbar-brand(href="#") TJW
         #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
               <li class="active"><a href="#">Home</a></li>
               <li><a href="#about">About</a></li>
               <li><a href="#contact">Contact</a></li>

   .container
      .row.row-offcanvas.row-offcanvas-right
         .col-sm-12.col-md-12
            p.pull-right.visible-xs
               button.btn.btn-primary.btn-xs(type="button", data-toggle="offcanvas") Toggle nav
            br
            br
            .jumbotron
               #carousel-blog-generic.carousel.slide(data-ride="carousel")
                  ol.carousel-indicators
                     li.active(data-target="#carousel-blog-generic", data-slide-to="0")
                     li(data-target="#carousel-blog-generic", data-slide-to="1")
                     li(data-target="#carousel-blog-generic", data-slide-to="2")
                  div.carousel-inner(role="listbox")
                     div.item.active
                        img(src="../../images/slide1.png", alt="First slide")
                     div.item
                        img(src="../../images/slide1.png", alt="Second slide")
                     div.item
                        img(src="../../images/slide1.png", alt="Third slide")
                  a.left.carousel-control(href="#carousel-blog-generic", role="button", data-slide="prev")
                     span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
                     span.sr-only Previous
                  a.right.carousel-control(href="#carousel-blog-generic", role="button", data-slide="next")
                     span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
                     span.sr-only Next
            .col-sm-6.col-md-8
               each item in posts
                  .row
                     h2 #{item.title}
                     p #{item.content}
                     p
                        a.btn.btn-default(href="#", role="button") 显示更多 &raquo;
            .col-sm-6.col-md-4.sidebar-offcanvas#sidebar
               .list-group
                  each item in category
                     a.list-group-item.active(href="#") #{item.text}
                     a.list-group-item(href="#") Link
      hr
      footer
         p &copy; Company 2015

extends ../frame
block content
   h3.text-center 文章类别管理页面
   .container
      .row
         .col-md-4.input-group
            input.form-control#inputCategory(type="text", placeholder="请输入新的类别名称")
            span.input-group-btn
               button.btn.btn-primary#addCategory(type="button") 添加
      .row
         table.table.table-hover.table-hordered
            thead
               tr
                  th 类别
                  th 数目
                  th 查看
                  th 更新
                  th 删除
            tbody
               each item in categories
                  tr(class="item-name-#{item.name}")
                     td #{item.name}
                     td #{item.count}
                     td: a(target="_blank", href="#{item.name}") 查看
                     td
                        button.btn.btn-warning.update(type="button", data-name="#{item.name}") 更新
                     td
                        button.btn.btn-danger.del(type="button", data-name="#{item.name}") 删除
   script(src="/js/category.js")
